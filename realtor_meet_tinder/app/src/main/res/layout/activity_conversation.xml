<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kdao.realtor_meet_tinder.ConversationActivity">
    <!-- Include the AppBarLayout -->
    <include layout="@layout/toolbar_secondary" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/list_view_1" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:background="@android:color/transparent"
        android:weightSum="1"
        android:layout_marginTop="60dp"
        android:id="@+id/message_layout"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:background="@color/colorTextBlue"
            android:textColor="@color/colorWhite"
            android:layout_weight="0.1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_medium_sm"
            android:padding="5dp"
            android:drawableRight="@drawable/search_style"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="5dp"
            android:textColorHint="@color/colorLightGray"
            android:hint="Message"
            android:textColor="@color/colorTextBlack"
            android:layout_weight="0.9" />
    </LinearLayout>
</RelativeLayout>
